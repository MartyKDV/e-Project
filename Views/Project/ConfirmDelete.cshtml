@model e_Project.Models.Project

@{
    ViewData["Title"] = "ConfirmDelete";
}

<h3>Are you sure you want to delete project @Html.DisplayFor(model => model.Title)?</h3>

<div>
    <form asp-action="Delete" style="display: inline-block;">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes" class="btn btn-danger" />
    </form>
    <form action=@ViewBag.returnURL style="display: inline-block;">
        <input type="submit" value="No" class="btn btn-primary" />
    </form>  
</div>
